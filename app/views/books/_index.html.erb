<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th style="wifth: 5%"></th>
      <th style="width: 15%">Title</th>
      <th style="width: 50%">Opinion</th>
      <th style="wifth: 5%"></th>
      <th style="wifth: 25%"></th>

    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td class="book-tytle"><%= link_to book.title,book %></td>
        <td class="book-body"><%= book.body %></td>
        
      <% if book.favorited_by?(current_user) %>
        <td><%= link_to book_favorites_path(book), method: :delete do %><span class="text-danger text-opacity-50">♥</span><% end %>
          <%= book.favorites.count %>
        </td>
      <% else %>
        <td><%= link_to book_favorites_path(book), method: :post do %><span class="text-danger text-opacity-50">♡</span><% end %>
          <%= book.favorites.count %>
        </td>
      <% end %>
        <td><span><%= book.book_comments.count %></span>件
        </td>
      </tr>
    <% end %>
  </tbody>
</table>