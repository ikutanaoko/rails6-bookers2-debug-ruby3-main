<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td class="book-tytle"><%= link_to @book.title, @book %></td>
          <td class="book-body"><%= @book.body %></td>
          <%= render 'favorite', book: @book %>
          <td>コメント<span><%= @book.book_comments.count %></span>件
          </td>
          <% if current_user.id == @book.user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          
        </tr>
      </table>
      <% @book.book_comments.each do |book_comment| %>
        <table class="float-right">
          <tr>
            <td><%= image_tag book_comment.user.get_profile_image, size:"50x50"  %></td>
            <td class="pl-3"><%= link_to(book_comment.user) do %><%= book_comment.user.name %><% end %></td>
            <td class="pl-3"><%= book_comment.comment %></td>
            <td class="pl-3"><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
            <% if book_comment.user == current_user %>
              <td><%= link_to"削除",book_book_comment_path(book_comment.book, book_comment),method: :delete %>
              </td>
            <% end %>
          </tr>
      <% end %>
      </table>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '3', placeholder:"コメントをここに", class: 'form-control book_body' %>
          <%= f.submit "送信する", class:"mt-1" %>
        <% end %>  
      </div>
      
    </div>
  </div>
</div>