<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <thead>
  		    <th style="width: 20%"></th>
  		    <th style="width: 30%"></th>
  		    <th style="width: 50%"></th>
  		  </thead>
  		  <tbody>
  		  <tr class="table_data">
          <td><%= link_to(@book.user) do %>  
            <%= image_tag @book.user.get_profile_image, size:"50x50" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td class="book-tytle"><%= link_to @book.title, @book %></td>
          <td class="book-body"><%= @book.body %></td>
        </tr>
        </tbody>
      </table>
      <table class='table'>
        <tr>
          <td><%= render "books/static_rate", book: @book %></td>
          <td id="favorite_buttons_<%= @book.id %>">
            <%= render "favorites/favorite-btn", book: @book %>
          </td>       
          <td>コメント<span id="comment_count"><%= @book.book_comments.count %></span>件</td>
          <td class="book_category"><%= link_to @book.category, search_book_path(keyword: @book.category), class: "btn btn-secondary btn-sm btn-block", style: "font-size: 5px;" %></td>
          <% if current_user.id == @book.user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success", style: "font-size: 12px;" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'are you sure?' }, class: "btn btn-sm btn-danger", style: "font-size: 12px;"%></td>
          <% end %>

        </tr>
      </table>
      <div id="comments">
        <%= render "books/book_comments", book:@book, comment:@comment %>
      </div>
      <div><%= render 'layouts/errors', obj: @comment%></div>
      
    </div>
  </div>
</div>