<ul>
  <% notifications.each do |notification| %>
  <li><strong><%= link_to user_path(notification.visiter_id) do %><%= notification.visiter.name %><% end %></strong>さんが
    <strong><%= link_to book_path(notification.book_id) do %><%= notification.book.title ><% end %></strong>にコメントしました。
    <%= "(#{time_ago_in_words(notification.created_at)} 前" %>
  </li>
  <% end %>
</ul>